 INFORMATION OF <<BUNRPINC>
C     ------------------------------------------------------------------
C     PARAMETER DEFINISION FOR SRAC BURNUP ROUTINE
C     ------------------------------------------------------------------
C     PARAMETER MEANING                                  RECOMMENDED
C     NAME      MEANING                                  DEFAULT VALUE
C     ------------------------------------------------------------------
C     MXSTEP    MAXIMUM BURNUP STEP (<=61)                   61
C     MXNUC     MAXIMUM NUCLIDE IN CHAIN                    150
C     MXZONE    MAXIMUM MATERIALS IN PRESENT GROMETRY        20
C     MXFISS    MAXIMUM FISSIONABLE NUCLIDE                  35
C     MXDEPL    MAXIMUM DEPLETING ZONES IN BURNUP CAL.       15
C     NGMAX     MAXIMUM ENERGY GROUPS                       107
C     MXREPL    MAXIMUM DEPLETING ZONES OF WHICH NUMBER      10
C               DENSITY ARE REPLACED BY INPUT DATA
C     ------------------------------------------------------------------
========================================================================
 INFORMATION OF <<CITPMINC>
C     ------------------------------------------------------------------
C     PARAMETER DEFINISION FOR SRAC CITATION ROUTINE
C     ------------------------------------------------------------------
C   PARAMETER FOR SRAC-CITATION, < >:ORIGINAL VALUE
C   RGX  : MAX OF REGIONS IN ANY DIRECTION <100>
C   MSX  : MAX OF MESH BOUNDARIES IN ANY DIRECTION <211>
C   ZDX  : MAX OF ZONES <200>
C   ZNEX : MAX OF EXPANDED-ZONE AREA <1000> : USUALLY ENOUGH
C   WZX  : MAX OF ZONE WORKING AREA <100> : SET OVER RGX
C     ------------------------------------------------------------------
      INTEGER RGX , MSX , ZNEX , ZDX , WZX
========================================================================
